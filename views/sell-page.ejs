    <main class="container" role="main" aria-label="Sell your home form">
      <h1>Sell Your Home</h1>
      <p>If you're ready to sell your home, complete the form below and our agents will contact you with a free consultation and valuation.</p>

      <form id="sell-form" aria-describedby="form-desc" method="POST" action="/upload" enctype="multipart/form-data">
        <div id="form-desc" style="margin-bottom: 20px; color:#666; user-select:none;">
          * Required fields
        </div>
        <div>
          <label for="owner-name">Your Full Name *</label>
          <input type="text" id="ownerName" name="ownerName" required autocomplete="name" />
        </div>
        <div>
          <label for="owner-email">Email Address *</label>
          <input type="email" id="ownerEmail" name="ownerEmail" required autocomplete="email" />
        </div>
        <div>
          <label for="owner-phone">Phone Number</label>
          <input type="tel" id="ownerPhone" name="ownerPhone" autocomplete="tel"  required/>
        </div>
        <div>
          <label for="property-address">Property Address *</label>
          <input type="text" id="propertyAddress" name="propertyAddress" required placeholder="Street, City, State, ZIP" autocomplete="street-address" />
        </div>
        <div>
          <label for="bedrooms">Bedrooms *</label>
          <select id="bedrooms" name="bedrooms" required>
            <option value="" disabled selected>Select number</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5+</option>
          </select>
        </div>
        <div>
          <label for="bathrooms">Bathrooms *</label>
          <select id="bathrooms" name="bathrooms" required>
            <option value="" disabled selected>Select number</option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4+</option>
          </select>
        </div>
        <div>
          <label for="sqft">Square Footage *</label>
          <input type="number" id="sqft" name="sqft" min="100" max="100000" required />
        </div>
        <div>
          <label for="title">Title*</label>
          <input type="text" id="title" name="title" placeholder="e.g beautiful modern home with spacious backyard and private pool" required />
        </div>
        <div>
          <label for="Rent/Sell">Rent/Sell *</label>
          <select id="Rent/Sell" name="rentSell" required>
            <option value="" disabled selected>Rent/Sell</option>
            <option>Rent</option>
            <option>Sell</option>
          </select>
        </div>

         <div>
          <label for="property-type">Property Type</label>
          <select id="property-type" name="property_type" required>
            <option value="" disabled selected>Propert Type</option>
            <option>self-contain</option>
            <option>plot of land</option>
            <option>Duplex/Bangalow/Storey building</option>
          </select>
        </div>

        <div>
          <label for="amount">Enter Amount in Naira</label>
      <div class="naira-input">
