          <div id="image-preview" class="image-preview-container" style="margin-top: 10px; display: flex; flex-wrap: wrap; gap: 10px;"></div>
        </div>

         <div>
          <label for="image">Upload Image *</label>
          <input type="file" id="video" name="video" accept="video/*" required multiple>
          <div id="image-preview" class="image-preview-container" style="margin-top: 10px; display: flex; flex-wrap: wrap; gap: 10px;"></div>
        </div>


