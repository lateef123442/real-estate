  <script>
    (() => {
      let currentPage = 1;
      const listingsPerPage = 10; // Adjust as needed
      let filteredListings = []; // This should be populated with your listings data

      function updatePagination() {
        document.getElementById('prev-btn').disabled = currentPage === 1;
        document.getElementById('next-btn').disabled = currentPage * listingsPerPage >= filteredListings.length;
      }

      function goToPreviousPage() {
        if (currentPage > 1) {
          currentPage--;
          renderListings(filteredListings, currentPage);
          updatePagination();
        }
      }

      function goToNextPage() {
        if (currentPage * listingsPerPage < filteredListings.length) {
          currentPage++;
          renderListings(filteredListings, currentPage);
          updatePagination();
        }
      }

      document.getElementById('buy-search-form').addEventListener('submit', e => {
        e.preventDefault();
        filterListings(); // Implement this function to filter listings based on search criteria
      });
      document.getElementById('prev-btn').addEventListener('click', goToPreviousPage);
      document.getElementById('next-btn').addEventListener('click', goToNextPage);

      filteredListings = listings; // Assuming 'listings' is your array of property data
      renderListings(filteredListings, currentPage);
      updatePagination();

      document.querySelector('.dropdown-toggle').addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
        document.getElementById('admin-menu').classList.toggle('show');
      });
    })();
    
  </script>
