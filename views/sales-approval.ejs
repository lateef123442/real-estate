    <main class="container" role="main" aria-label="Buy homes listings and search">
      <h1>Approve Sales</h1>
      <p class="intro-text">Approve the sales to allow them available for purchase</p>

      <form class="search-bar" id="buy-search-form" aria-label="Filter buy properties">
        <div>
          <label for="location">Location</label>
          <input type="text" id="location" name="location" placeholder="City, neighborhood, or address" autocomplete="off" aria-describedby="location-desc" />
          <small id="location-desc" style="color:#666; font-size:0.75rem;">Enter a location to search</small>
        </div>
        <div>
          <label for="min-price">Min Price</label>
          <select id="min-price" name="min-price" aria-label="Minimum price">
            <option value="">No Min</option>
            <option value="50000">$50,000</option>
            <option value="100000">$100,000</option>
            <option value="200000">$200,000</option>
            <option value="300000">$300,000</option>
            <option value="400000">$400,000</option>
            <option value="500000">$500,000</option>
            <option value="750000">$750,000</option>
            <option value="1000000">$1,000,000+</option>
          </select>
        </div>
        <div>
          <label for="max-price">Max Price</label>
          <select id="max-price" name="max-price" aria-label="Maximum price">
            <option value="">No Max</option>
            <option value="100000">$100,000</option>
            <option value="200000">$200,000</option>
            <option value="300000">$300,000</option>
            <option value="400000">$400,000</option>
            <option value="500000">$500,000</option>
            <option value="750000">$750,000</option>
            <option value="1000000">$1,000,000</option>
            <option value="2000000">$2,000,000+</option>
          </select>
        </div>
        <div>
          <label for="min-beds">Beds</label>
          <select id="min-beds" name="min-beds" aria-label="Minimum bedrooms">
            <option value="">Any</option>
            <option value="1">1+</option>
            <option value="2">2+</option>
            <option value="3">3+</option>
            <option value="4">4+</option>
            <option value="5">5+</option>
          </select>
        </div>
        <div>
          <label for="min-baths">Baths</label>
          <select id="min-baths" name="min-baths" aria-label="Minimum bathrooms">
            <option value="">Any</option>
            <option value="1">1+</option>
            <option value="2">2+</option>
            <option value="3">3+</option>
            <option value="4">4+</option>
          </select>
        </div>
        <button type="submit" aria-label="Search properties to buy">
          <span class="material-icons" aria-hidden="true">search</span> Search
        </button>
      </form>

      <section aria-label="Properties for sale">
        <div class="listings-grid" id="buy-listings" role="list" tabindex="0" aria-live="polite">
          <% card.forEach(card => { %> 
            <div class="property-card" >
              <h3>This property is for <%= card.rentSell %></h3>
              <div class="property-details">
                <span class="label">Seller Name:</span> <span class="value"><%= card.ownerName %></span>
              </div>
              <div class="property-details">
                <span class="label">Seller Email:</span> <span class="value"><%= card.ownerEmail %></span>
              </div>
              <img src="<%= card.image_data %>" loading="lazy" alt="<%= card.description %>" width="320" height="180" />
              <span class="status-pending absolute top-0 right-0 m-2 px-2 py-1 rounded-full text-xs">Pending</span>
              <div class="property-content">
                <h3 class="property-title" title="<%= card.title %>"><%= card.title %></h3>
                <p class="property-address" title="<%= card.propertyAddress %>"><%= card.propertyAddress %></p>
                <div class="property-features" aria-label="Property features">
                  <div class="feature" title="<%= card.bedrooms %> Bedrooms">
                    <span class="material-icons" aria-hidden="true">bed</span><%= card.bedrooms %>
                  </div>
                  <div class="feature" title="<%= card.bathrooms %> Bathrooms">
                    <span class="material-icons" aria-hidden="true">bathtub</span><%= card.bathrooms %>
                  </div>
                  <div class="feature" title="<%= card.sqft %> Square feet">
                    <span class="material-icons" aria-hidden="true">square_foot</span><%= card.sqft %>
                  </div>
                </div>
                <div class="property-price"><%= card.amount %><!--<%= (card.price) %>--></div>
                  <div class="buutons">
                    <a><button class="request-tour" onclick="location.href='/view?id=<%= card.id %>'">view</button></a>
                    <a><button class="approve" style="background-color: green;" onclick="location.href='/approve?id=<%= card.id %>'">Approve</button></a>

                    <a><button class="decline" style="background-color: red;" onclick="location.href='/decline?id=<%= card.id %>'">Decline</button></a>
                   
                  </div>
              </div>
            </div>
          <% }) %>
        </div>
      </section>

      <nav class="pagination" aria-label="Pagination controls" role="navigation">
        <button id="prev-btn" aria-label="Previous page" disabled>&lt;</button>
        <button id="next-btn" aria-label="Next page">&gt;</button>
      </nav>
    </main>
  </div>
  <script>
    (() => {
      let currentPage = 1;
      const listingsPerPage = 10; // Adjust as needed
      let filteredListings = []; // This should be populated with your listings data

      function updatePagination() {
        document.getElementById('prev-btn').disabled = currentPage === 1;
        document.getElementById('next-btn').disabled = currentPage * listingsPerPage >= filteredListings.length;
      }

      function goToPreviousPage() {
        if (currentPage > 1) {
          currentPage--;
          renderListings(filteredListings, currentPage);
          updatePagination();
        }
      }

      function goToNextPage() {
        if (currentPage * listingsPerPage < filteredListings.length) {
          currentPage++;
          renderListings(filteredListings, currentPage);
          updatePagination();
        }
      }

   
      document.getElementById('prev-btn').addEventListener('click', goToPreviousPage);
      document.getElementById('next-btn').addEventListener('click', goToNextPage);

      filteredListings = listings; // Assuming 'listings' is your array of property data
      renderListings(filteredListings, currentPage);
      updatePagination();

      document.querySelector('.dropdown-toggle').addEventListener('click', function() {
        const expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
        document.getElementById('admin-menu').classList.toggle('show');
      });
    })();
    
  </script>
