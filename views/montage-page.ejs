  <main class="container" role="main" aria-label="Create a property montage">
    <h1>Create a Property Montage</h1>
    <p>Showcase your property by uploading images and providing details below.</p>

    <form id="montage-form" aria-describedby="form-desc">
      <div id="form-desc" style="margin-bottom: 20px; color:#666; user-select:none;">
        * Required fields
      </div>
      <div>
        <label for="property-title">Property Title *</label>
        <input type="text" id="property-title" name="property-title" required />
      </div>
      <div>
        <label for="property-address">Property Address *</label>
        <input type="text" id="property-address" name="property-address" required placeholder="Street, City, State, ZIP" />
      </div>
      <div>
        <label for="property-description">Property Description *</label>
        <textarea id="property-description" name="property-description" required placeholder="Describe your property..."></textarea>
      </div>
      <div>
        <label for="property-images">Upload Images *</label>
        <input type="file" id="property-images" name="property-images" accept="image/*" multiple required />
      </div>
      <div class="image-preview" id="image-preview"></div>
      <button type="submit" class="submit-btn" aria-label="Submit property montage">
        <span class="material-icons" aria-hidden="true">upload</span> Submit
      </button>
    </form>

    <div id="confirmation-message" class="confirmation" role="status" aria-live="polite" style="display:none;">
      Thank you for your submission! Your property montage will be reviewed soon.
    </div>
  </main>
  </div>

  <script>
    (() => {
      const form = document.getElementById('montage-form');
      const confirmation = document.getElementById('confirmation-message');
      const imagePreview = document.getElementById('image-preview');

      form.addEventListener('submit', function(e) {
        e.preventDefault();
        confirmation.style.display = 'block';
        form.reset();
        imagePreview.innerHTML = ''; // Clear image previews
      });

      document.getElementById('property-images').addEventListener('change', function() {
        imagePreview.innerHTML = ''; // Clear previous previews
        const files = this.files;
        for (let i = 0; i < files.length; i++) {
          const file = files[i];
          const reader = new FileReader();
          reader.onload = function(e) {
            const img = document.createElement('img');
            img.src = e.target.result;
            imagePreview.appendChild(img);
          }
          reader.readAsDataURL(file);
        }
      });
    })();
  </script>
