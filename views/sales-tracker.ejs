   /* ---------- Simple, professional styling ---------- */
:root {
    --bg: #f5f7fb;
    --card: #ffffff;
    --muted: #6b7280;
    --accent: #0f766e;
    --accent-2: #2563eb;
    --danger: #dc2626;
    --success: #16a34a;
    --glass: rgba(15, 118, 110, 0.06);
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

* {
    box-sizing: border-box;
}

html, body {
    height: 100%;
}

body {
    margin: 0;
    background: linear-gradient(180deg, var(--bg) 0%, #eef2ff 100%);
    color: #0f172a;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    padding: 24px;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
}

header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20px;
    flex-wrap: wrap; /* Allow wrapping */
}

.brand {
    display: flex;
    gap: 12px;
    align-items: center;
}

.logo {
    width: 56px;
    height: 56px;
    border-radius: 8px;
    background: var(--accent);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 20px;
    box-shadow: 0 6px 18px rgba(37, 99, 235, 0.12);
}

h1 {
    margin: 0;
    font-size: 20px;
}

p.lead {
    margin: 0;
    color: var(--muted);
    font-size: 13px;
}

.controls {
    display: flex;
    gap: 12px;
    flex-wrap: wrap; /* Allow wrapping */
}

input.search {
    padding: 10px 12px;
    border-radius: 8px;
    border: 1px solid #e6e9ef;
    background: white;
    min-width: 220px;
    flex: 1; /* Allow input to grow */
    box-shadow: 0 4px 10px rgba(16, 24, 40, 0.04);
}

.btn {
    padding: 10px 14px;
    border-radius: 8px;
    border: none;
    background: var(--accent);
    color: white;
    font-weight: 600;
    cursor: pointer;
}

.stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 14px;
    margin-bottom: 18px;
}

.card {
    background: var(--card);
    padding: 16px;
    border-radius: 10px;
    box-shadow: 0 6px 18px rgba(16, 24, 40, 0.04);
}

.card h3 {
    margin: 0;
    font-size: 12px;
    color: var(--muted);
}

.card .value {
    font-size: 22px;
    font-weight: 700;
    margin-top: 6px;
}

.small {
    font-size: 12px;
    color: var(--muted);
    margin-top: 6px;
}

.table-wrap {
    background: transparent;
    border-radius: 10px;
    padding: 10px;
}

table {
    width: 100%;
    border-collapse: collapse;
    background: var(--card);
    overflow: hidden;
    border-radius: 8px;
}

thead {
    background: linear-gradient(90deg, rgba(37, 99, 235, 0.06), rgba(15, 118, 110, 0.04));
    color: var(--muted);
}

th, td {
    padding: 12px 14px;
    text-align: left;
    font-size: 14px;
    border-bottom: 1px solid #f1f5f9;
}

th {
    font-size: 12px;
    font-weight: 600;
}

.badge {
    display: inline-block;
    padding: 6px 10px;
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
}

.badge.lead {
    background: var(--glass);
    color: var(--accent);
}

.badge.active {
    background: rgba(37, 99, 235, 0.08);
    color: var(--accent-2);
}

.badge.closed {
    background: rgba(16, 185, 129, 0.12);
    color: var(--success);
}

.badge.lost {
    background: rgba(220, 38, 38, 0.08);
    color: var(--danger);
}

.progress {
    height: 8px;
    background: #eef2ff;
    border-radius: 6px;
    overflow: hidden;
}

.progress > i {
    display: block;
    height: 8px;
    border-radius: 6px;
}

.actions {
    display: flex;
    gap: 8px;
}

.actions button {
    padding: 6px 10px;
    border-radius: 8px;
    border: 1px solid #e6e9ef;
    background: white;
    cursor: pointer;
}

/* responsive */
@media (max-width: 900px) {
    .stats {
